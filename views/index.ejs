<%-include("partials/header.ejs")%>
<%if(locals.info){%>
	<div class="container">
		<div class="card">
			<div class="card-body">
				<h5 class="card-title">
					<%= name %>
				</h5>
				<hr />
				<div class="content">
					<div class="nutrition">
						<h3>Nutrition</h3>
						<ol>
							<li>Saturated Fat:</li>
							<li>Sodium:</li>
							<li>Potassium:</li>
							<li>Cholestrol:</li>
							<li>Carbohydrates:</li>
							<li>Fiber:</li>
							<li>Sugar:</li>
						</ol>
					</div>
					<div class="composition">
						<h3>Composition</h3>
						<ol class="com">
							<li>
								<%=info.fat_total_g %>g
							</li>
							<li>
								<%= info.sodium_mg %>mg
							</li>
							<li>
								<%= info.potassium_mg %>mg
							</li>
							<li>
								<%= info.cholesterol_mg %>mg
							</li>
							<li>
								<%= info.carbohydrates_total_g %>g
							</li>
							<li>
								<%= info.fiber_g %>g
							</li>
							<li>
								<%= info.sugar_g %>g
							</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
	</div>
	<%}else if(locals.error){%>
	<div class="container" style="padding-bottom:10px;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif"><h2><%=error%></h2></div>
		<%}%>
</body>

</html>